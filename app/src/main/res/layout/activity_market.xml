                <Button
                    android:id="@+id/oreTadeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Trade" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gamesResourceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Games" />

                <TextView
                    android:id="@+id/gamesCostTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Cost" />

                <TextView
                    android:id="@+id/gamesCargoSpaceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Cargo Space" />

                <Button
                    android:id="@+id/gamesTradeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:text="Trade" />

            </LinearLayout>

            <LinearLayout
