<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travelPopupPlanetTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Planet:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travelPopupTechLevelTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tech Level:"
                tools:text="Tech Level:" />

            <TextView
                android:id="@+id/travelPopupResourceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resource:"
                tools:text="Resource:" />

            <TextView
                android:id="@+id/travelPopupConditionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condition: " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travelPopupUsersFuelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="Players Fuel:" />

            <TextView
                android:id="@+id/travelPopupFuelRequiredTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Cost:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/travelPopupTravelButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Travel" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>